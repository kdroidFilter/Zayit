root = true

[*]
charset = utf-8
end_of_line = lf
indent_size = 4
indent_style = space
insert_final_newline = true
trim_trailing_whitespace = true

[*.{kt,kts}]
max_line_length = 140

# Disable rules that conflict with Compose conventions
ktlint_function_naming_ignore_when_annotated_with = Composable
ktlint_standard_function-naming = disabled
ktlint_standard_backing-property-naming = disabled

# Allow wildcard imports for common packages
ktlint_standard_no-wildcard-imports = disabled

# Compose rules configuration
ktlint_compose_compositionlocal-allowlist = enabled
ktlint_compose_content-emitter-returning-values-check = enabled
# Allow screens, windows, navhosts and scaffolds to not have modifier parameter
ktlint_compose_modifier-missing-check_allowed-composables = DatabaseUpdateWindow,DatabaseUpdateNavHost,CompletionScreen,OfflineUpdateScreen,OnlineUpdateScreen,PaneHeader,FinishScreen,InitScreen,HorizontalDivider,VerticalDivider,MainTitleBar,TextWithLink,TitleBarActionButton,TabsNavHost,BookContentScreen,LineCommentsView,LineTargumView,UpdateOptionsScreen,VersionCheckScreen,AvailableDiskSpaceScreen,AvailableDiskSpaceView,DownloadScreen,DownloadScreenContent,ExtractScreen,ExtractScreenContent,OnBoardingNavHost,OfflineFileSelectionScreen,OnBoardingWindow,OnBoardingScaffold,VersionVerificationScreen,SettingsNavHost,PreviewContainer,SearchResultItem
ktlint_compose_modifier-missing-check = enabled
ktlint_compose_modifier-reused-check = enabled
ktlint_compose_multiple-emitters-check = enabled
ktlint_compose_mutable-state-param-check = enabled
ktlint_compose_naming-check = enabled
ktlint_compose_parameter-order-check = enabled
ktlint_compose_preview-annotation-naming-check = enabled
ktlint_compose_remember-missing-check = enabled
ktlint_compose_unstable-collections = enabled
ktlint_compose_vm-forwarding-check = enabled

[*.md]
trim_trailing_whitespace = false

[*.{yml,yaml}]
indent_size = 2

[*.gradle.kts]
indent_size = 4
